{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2017",
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.*",
        "jestSetup.js",
        "eslint.config.js",
        "webpack.config.js"
    ]
}
